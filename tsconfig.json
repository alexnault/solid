{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "controllers/*": ["src/controllers/*"],
      "domain/*": ["src/domain/*"],
      "repos/*": ["src/repos/*"],
      "shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*"]
}
